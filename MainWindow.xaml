<Window x:Class="LaboratoryWork3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaboratoryWork3"
        mc:Ignorable="d"
        Title="Таймер" Height="400" Width="325" ResizeMode="CanMinimize">
    <Grid Margin="0,0,-20,-1">
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="277" Margin="42,42,0,0" VerticalAlignment="Top" Width="239" SelectionChanged="listBox_SelectionChanged"/>
        <Button x:Name="button_add" Content="Добавить" HorizontalAlignment="Left" Margin="122,336,0,0" VerticalAlignment="Top" Width="75" Click="button_add_Click"/>
        <Button x:Name="bt_look" Content="Просмотр" HorizontalAlignment="Left" Height="20" Margin="10,336,0,0" VerticalAlignment="Top" Width="65" Click="bt_look_Click"/>
        <Menu HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="69">
            <MenuItem x:Name="M1" Header="File" Height="24" Width="69">
                <MenuItem x:Name="M1open" Header="Open" Click="M1open_Click"/>
                <MenuItem x:Name="M1Save" Header="Save" Click="M1Save_Click"/>
            </MenuItem>

        </Menu>
    </Grid>
</Window>
